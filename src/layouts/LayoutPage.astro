---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const { title, description, subheader } = Astro.props;
---

<html lang="en">
   <head>
      <BaseHead title={title} description={description} />
      <style>

         .title {
            margin-bottom: 2.5em;
            line-height: 1;
         }
         .title h1 {
            margin: 0;
         }
         .subheader {
            padding-block: 1rem;
            font-family: var(--font-alt);
         }
         .date {
            margin-bottom: 0.5em;
            color: rgb(var(--gray));
         }
         .last-updated-on {
            font-style: italic;
         }
      </style>
   </head>
   <body>
      <Header />
      <main transition:animate="slide">
         <div class="section">
            <div class="container">
               <article data-pagefind-body>
                  <div class="prose">
                     <header class="title">
                        <h1 data-message={title}>{title}</h1>
                        {subheader && <div class="subheader">{subheader}</div>}
                     </header>
                     <slot />
                  </div>
               </article>
            </div>
         </div>
      </main>
      <Footer bookID="" location="page" class:list={"page"} />
   </body>
</html>
