---
import type { CollectionEntry } from 'astro:content';

interface Props {
   data: CollectionEntry<'excerpts'>
}

const { data: entry } = Astro.props;
const { Content, headings } = await entry.render();
---
<div class="excerpt__main text-block">
   <h4>Read An Excerpt From <span>{entry.data.title}</span></h4>
   <Content />
</div>

<style is:global>
   .excerpt__main {
      margin-block: 6rem;
   }
   .excerpt__main > p:first-of-type::first-letter {
      initial-letter: 2 2;
      margin-right: 0.25lh;
   }
   h4 {
      font-family: var(--font-alt);
      font-weight: normal;
      font-size: 1rem;
      margin-bottom: 2rem;
      display: inline-block;
      text-align: left;
   }
   h4 span {
      opacity: 0.5;
   }
   /* Messages */
   .messages {
      display: flex;
      align-items: flex-end;
      flex-direction: column;
      gap: 1rem;
      padding: 1rem;
   }
   .message {
      font-family: var(--font-alt);
      list-style-type: none;
      display: inline-block;
      max-width: 300px;
   }
   .message__quote {
      color: var(--theme-light__color__1);
      background-color: var(--theme-light__color__2);
      border-radius: 16px;
      padding: 7px 15px;
   }
   .message__attribution {
      text-align: right;
      font-size: 14px;
      margin-top: 7px;
   }
   .message--jack {
      margin-right: auto;
      margin-left: 20px;
   }

   .message--jack .message__quote {
      color: var(--theme-light__color__white);
      background-color: var(--theme-light__color__1_36);
   }
</style>

