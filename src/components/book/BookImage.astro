---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
const { imagePath, imageAltText, imageHeight, imageWidth } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
   "/src/assets/images/books/*.{jpeg,jpg,png,gif}"
);
if (!images[imagePath]) throw new Error(`"${imagePath}" does not exist in glob: "src/assets/images/books/*.{jpeg,jpg,png,gif}"`);
---
<Image
   width={imageWidth}
   height={imageHeight}
   src={images[imagePath]()}
   alt={imageAltText}
/>
